# Example environment variables for InfraUtilX EC2 with EBS Blueprint
# Copy this file to .env and fill in your values

# Pulumi configuration
PULUMI_CONFIG_PASSPHRASE=your-secure-passphrase-here
# Force Pulumi to use the AWS SDK's credential chain (leave empty for SSO)
PULUMI_ACCESS_TOKEN=

# AWS configuration
AWS_REGION=us-west-2
AWS_PROFILE=default
# If using AWS SSO, specify your SSO profile name
AWS_SSO_PROFILE=

# Blueprint configuration
INSTANCE_TYPE=t2.micro
EBS_SIZE=20
PROJECT_NAME=infrautilx-example
ENVIRONMENT=dev

# Stack configuration
PULUMI_STACK=dev